{
  "name": "nothis-react",
  "version": "1.0.0",
  "description": "",
  "author": "Joel Thoms",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && babel src --out-dir dist --ignore test.js",
    "lint": "eslint .",
    "test": "jest"
  },
  "dependencies": {
    "nothis": "^1.2.2"
  },
  "peerDependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "rimraf": "^2.6.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "6.10",
            "browsers": [
              "last 2 versions",
              "ie >= 11"
            ]
          }
        }
      ],
      "react"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "jest": {
    "testURL": "http://localhost",
    "setupFiles": [
      "<rootDir>/lib/setupTests.js"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "babel",
      "prettier",
      "react"
    ],
    "env": {
      "jest": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "overrides": {
      "files": [
        "__tests/**/*.test.js"
      ]
    },
    "extends": [
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "modules": true,
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "eslintIgnore": [
    "coverage",
    "dist"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
